{
    "$schema": "../../../libraries/BCNP/schema/bcnp_schema.json",
    "version": "3.2",
    "namespace": "bcnp",
    "description": "Robot-specific BCNP messages",
    "messages": [
      {
        "id": 1,
        "name": "DriveCmd",
        "description": "Differential drive velocity command",
        "fields": [
          {
            "name": "vx",
            "type": "float32",
            "scale": 10000,
            "unit": "m/s",
            "description": "Linear velocity"
          },
          {
            "name": "omega",
            "type": "float32",
            "scale": 10000,
            "unit": "rad/s",
            "description": "Angular velocity"
          },
          {
            "name": "durationMs",
            "type": "uint16",
            "unit": "ms",
            "description": "Command duration in milliseconds"
          }
        ]
      },
      {
        "id": 2,
        "name": "DrivetrainTelemetry",
        "description": "Drivetrain state telemetry sent from robot to host",
        "fields": [
          {
            "name": "leftVelocity",
            "type": "float32",
            "scale": 10000,
            "unit": "m/s",
            "description": "Left side actual velocity"
          },
          {
            "name": "rightVelocity",
            "type": "float32",
            "scale": 10000,
            "unit": "m/s",
            "description": "Right side actual velocity"
          },
          {
            "name": "leftPosition",
            "type": "float32",
            "scale": 1000,
            "unit": "m",
            "description": "Left side encoder position"
          },
          {
            "name": "rightPosition",
            "type": "float32",
            "scale": 1000,
            "unit": "m",
            "description": "Right side encoder position"
          },
          {
            "name": "timestampMs",
            "type": "uint32",
            "unit": "ms",
            "description": "FPGA timestamp in milliseconds"
          }
        ]
      }
    ]
  }